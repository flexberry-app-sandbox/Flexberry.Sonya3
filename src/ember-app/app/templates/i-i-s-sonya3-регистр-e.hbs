<h3 class="ui header">{{t "forms.i-i-s-sonya3-регистр-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-sonya3-регистр-e.iD-caption")
      data-test-i-i-s-sonya3-регистр-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-sonya3-регистр-e.расходДенег-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.расходДенег
      displayAttributeName="iD"
      autocomplete=true
      relationName="расходДенег"
      projection="РасходДенегL"
      title=(t "forms.i-i-s-sonya3-регистр-e.расходДенег-caption")
      readonly=readonly
      componentName="расходДенегLookup"
      class=(if (v-get validationModel "расходДенег" "isInvalid") "error")
      data-test-i-i-s-sonya3-регистр-e-расходДенег=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "расходДенег" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-sonya3-регистр-e.приходДенег-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.приходДенег
      displayAttributeName="iD"
      autocomplete=true
      relationName="приходДенег"
      projection="ПриходДенегL"
      title=(t "forms.i-i-s-sonya3-регистр-e.приходДенег-caption")
      readonly=readonly
      componentName="приходДенегLookup"
      class=(if (v-get validationModel "приходДенег" "isInvalid") "error")
      data-test-i-i-s-sonya3-регистр-e-приходДенег=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "приходДенег" "message")}}
  </div>
</form>
